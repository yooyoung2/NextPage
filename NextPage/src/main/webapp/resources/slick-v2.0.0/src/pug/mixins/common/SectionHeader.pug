mixin SectionHeader(config) 
  if config.desc
    .row.justify-content-center.text-center&attributes(attributes)
      .col-10.col-md-6
        h3.fs-2.fs-lg-3 #{config.title}
        if config.desc 
          p.px-lg-4.mt-3 #{config.desc}
        hr.short(data-zanim-xs!={from:{opacity: 0, width: 0}, to:{opacity: 1, width: "4.20873rem"}, duration:0.8} data-zanim-trigger="scroll")
  else 
    .text-center&attributes(attributes)
      h3.fs-2.fs-md-3 #{config.title}
      hr.short(data-zanim-xs!={from:{opacity: 0, width: 0}, to:{opacity: 1, width: "4.20873rem"}, duration:0.8} data-zanim-trigger="scroll")
