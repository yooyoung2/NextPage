extends ../layouts/LayoutComponent
include ../mixins/common/ComponentLink

append variables 
	- var pageTitle = 'Tooltips';

block component
	+ComponentLink({
		text:'For detail documentation. ',
		linkText: 'View Tooltips on Bootstrap',
		link: `https://getbootstrap.com/docs/${bootstrapVersion}/components/tooltips/`
	})
	h5 Example
	+ComponentCard
		button.btn.btn-secondary.btn-sm.m-1(type='button' data-bs-toggle='tooltip' data-bs-placement='top' title='Tooltip on top') Tooltip on top	
		button.btn.btn-secondary.btn-sm.m-1(type='button' data-bs-toggle='tooltip' data-bs-placement='right' title='Tooltip on right') Tooltip on right
		button.btn.btn-secondary.btn-sm.m-1(type='button' data-bs-toggle='tooltip' data-bs-placement='bottom' title='Tooltip on bottom') Tooltip on bottom
		button.btn.btn-secondary.btn-sm.m-1(type='button' data-bs-toggle='tooltip' data-bs-placement='left' title='Tooltip on left') Tooltip on left
		button.btn.btn-secondary.btn-sm.m-1(type='button' data-bs-toggle='tooltip' data-bs-html='true' title='<em>Tooltip</em> <u>with</u> <b>HTML</b>') Tooltip with HTML
	
			