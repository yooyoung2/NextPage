mixin GalleryLightbox(config)
	a(href='#!' data-caption='caption' data-bigpicture!={
		gallery: '#image_gallery',
	} data-bp=`${CWD}assets/img/gallery/3/0${config.img}.jpg` )
		img.rounded.img-fluid.w-100(src=`${CWD}assets/img/gallery/3/0${config.img}.jpg` alt='')
	
