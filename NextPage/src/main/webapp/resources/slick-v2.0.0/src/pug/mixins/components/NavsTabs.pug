mixin HorizontalNavs 
	h5 Horizontal
	+ComponentCard
		ul.nav
			li.nav-item
				a.nav-link.active(aria-current='page' href='#') Active
			li.nav-item
				a.nav-link(href='#') Link
			li.nav-item
				a.nav-link(href='#') Link
			li.nav-item
				a.nav-link.disabled Disabled

