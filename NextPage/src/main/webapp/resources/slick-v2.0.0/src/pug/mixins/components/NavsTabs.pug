mixin NavFillJustify
	h5.mt-4 Fill and justify
	+ComponentCard
		ul.nav.nav-pills.nav-fill
			li.nav-item
				a.nav-link.active(aria-current='page' href='#') Active
			li.nav-item
				a.nav-link(href='#') Much longer nav link
			li.nav-item
				a.nav-link(href='#') Link
			li.nav-item
				a.nav-link.disabled Disabled

