mixin SolidButton
	h4 Buttons Colors
	p
		strong Slick
		|  uses 
		code .btn
		|  class for default button style. Customize the color of a button using 
		code .btn-*
		|  and 
		code .btn-outline-*
		| . You can use the following classes.
	.my-5
	h5 Solid Buttons
	+ComponentCard
		each color,index in colors
			button.btn(type='button' class=`btn-${color}`).me-1.mb-1=color
			= '\n'

mixin OutlineButtons 
	h5.mt-4 Outline Buttons
	+ComponentCard
		each color in colors
			button(type='button' class=`btn-outline-${color}`).btn.me-1.mb-1=color
			= '\n'

mixin HoverEffects
	h5.mt-4 Hover Effects
	-
		var effects= [
			{
				effects:'right',
				color :'dark',
			},
			{
				effects:'left',
				color :'primary',
			},
			{
				effects: 'top',
				color :'warning',
			},
			{
				effects: 'bottom',
				color :'success',
			},
			{
				effects: 'collapseX',
				color :'danger',
			},
			{
				effects: 'collapseY',
				color :'info',
			},

		];

	+ComponentCard
		each item in effects
			button(type='button' class=`hvr-sweep-${item.effects} btn-outline-${item.color} `).btn.me-1.mb-1=(`Sweep ${item.effects}`)
			= '\n'
		hr.my-3
		= '\n'
		each item in effects
			button(type='button' class=`hvr-sweep-${item.effects} btn-outline-${item.color}`).btn.rounded-pill.me-1.mb-1=(`Sweep ${item.effects}`)
			= '\n'
		hr.my-3
		= '\n'
		each item in effects
			button(type='button' class=`hvr-sweep-${item.effects} btn-${item.color}`).btn.rounded-pill.me-1.mb-1=(`Sweep ${item.effects}`)
			= '\n'

