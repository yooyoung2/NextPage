mixin Crossfade
	h5.mt-4.fw-extra-light Crossfade Example
	+ComponentCard
		#carouselExampleFade.carousel.slide.carousel-fade(data-bs-ride='carousel')
			.carousel-inner
				.carousel-item.active
					img.d-block.w-100(src=`${CWD}assets/img/60.jpg`, alt='First slide')
				.carousel-item
					img.d-block.w-100(src=`${CWD}assets/img/58.jpg`, alt='Second slide')
				.carousel-item
					img.d-block.w-100(src=`${CWD}assets/img/61.jpg`, alt='Third slide')
			= '\n'		
			button.carousel-control-prev(type='button' data-bs-target='#carouselExampleFade' data-bs-slide='prev')
				= '\n'
				span.carousel-control-prev-icon(aria-hidden='true')
				= '\n'
				span.visually-hidden Previous
				= '\n'
			button.carousel-control-next(type='button' data-bs-target='#carouselExampleFade' data-bs-slide='next')
				= '\n'
				span.carousel-control-next-icon(aria-hidden='true')
				= '\n'
				span.visually-hidden Next
				= '\n'