mixin Navigation-7(brand, attrs)
	nav.navbar.navbar-expand-lg.py-2&attributes(attributes)= attrs
		.container
			a.navbar-brand(href=`${CWD}index.html`)
				!=brand
			button.navbar-toggler.hamburger.hamburger--emphatic(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
				span.hamburger-box
					span.hamburger-inner

			.collapse.navbar-collapse#navbarNav
				ul.navbar-nav
					li.nav-item
						a.nav-link(aria-current='page' href='#!') Home
					li.nav-item
						a.nav-link(href='#!') Feature
					li.nav-item
						a.nav-link(href='#!') Blog

				ul.navbar-nav.ms-auto
					li.nav-item
						a.nav-link(href='#!') API
					li.nav-item
						a.nav-link(href='#!') Help
					
				a.btn-link.btn-custom.me-4(type='button') Sign In
				button.btn.btn-sm.btn-light.border-2.fw-bold(type='submit') Sign Up
