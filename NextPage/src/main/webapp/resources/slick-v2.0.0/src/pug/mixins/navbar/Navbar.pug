mixin Navbar(isNavbarONScroll)
  nav.navbar.navbar-slick.navbar-expand-lg.navbar-dark.fixed-top.py-2&attributes(attributes)(data-navbar-dark-on-scroll!=isNavbarONScroll)
    .container.container-wide-xl
      a.navbar-brand.ls-2.p-0.me-4(href=`${CWD}index.html`)
        img(src=`${CWD}assets/img/slick-logo.svg` alt="SLiCK" width=50)
      button.navbar-toggler.hamburger.hamburger--emphatic(type='button' data-bs-toggle='collapse' data-bs-target='#primaryNavbarCollapse' aria-controls='primaryNavbarCollapse' aria-expanded='false' aria-label='Toggle navigation')
        span.hamburger-box
          span.hamburger-inner
      #primaryNavbarCollapse.collapse.navbar-collapse
        ul.navbar-nav
          li.nav-item
            a.nav-link(aria-current='page' href=`${CWD}showcase-pages.html`) Pages
          li.nav-item
            a.nav-link(href=`${CWD}all-blocks.html`) All Blocks
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle.dropdown-caret-none#navbarDropdownMenuLink(href='#!', data-bs-toggle='dropdown', data-sl-dropdown-on-hover, aria-haspopup='true', aria-expanded='false')
              span.nav-link-text
                +cleanText('components')
                span.fa-solid.fa-angle-down.ms-1.fs--1.fw-bold
            .dropdown-menu.fade.dropdown-components.shadow-lg(aria-labelledby='navbarDropdownMenuLink')
              .row.justify-content-between
                .col-auto
                  ul.nav.flex-column
                    each value, index in sitemap[0].pages
                      if index < components.length / 3
                        li.nav-item.mb-1
                          a(href=`${CWD}${value.path}.html`).text-decoration-none.link-700.fw-normal
                            =value.name
                .col-auto
                  ul.nav.flex-column
                    each value, index in sitemap[0].pages
                      if index >= components.length / 3 && index < components.length * 2 / 3
                        li.nav-item.mb-1
                          a(href=`${CWD}${value.path}.html`).text-decoration-none.link-700.fw-normal.py-1
                            =value.name
                .col-auto
                  ul.nav.flex-column
                    each value, index in sitemap[0].pages
                      if index >= components.length  * 2 / 3
                        li.nav-item.mb-1
                          a(href=`${CWD}${value.path}.html`).text-decoration-none.link-700.fw-normal.py-1
                            =value.name                     
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle.dropdown-caret-none#navbarDropdownMenuLink2(href='#!', data-bs-toggle='dropdown-on-hover', data-sl-dropdown-on-hover, aria-haspopup='true', aria-expanded='false')
              span.nav-link-text
                +cleanText('Docs')
                span.fa-solid.fa-angle-down.ms-1.fs--1.fw-bold

            ul.dropdown-menu.rounded.fade.border-0.bg-white.shadow-lg(aria-labelledby='navbarDropdownMenuLink2')
              li
                a(href=`${CWD}docs/getting-started.html`).dropdown-item.link-700 Getting Started
              li
                a(href=`${CWD}docs/file-structure.html`).dropdown-item.link-700 File Structure
              li
                a(href=`${CWD}docs/customization.html`).dropdown-item.link-700 Customization
              li
                a(href=`${CWD}docs/gulp.html`).dropdown-item.link-700 Gulp
              li
                a(href=`${CWD}docs/generator.html`).dropdown-item.link-700 Generator
              li.nav-item
                a(href=`${CWD}docs/plugins.html`).dropdown-item.link-700 Plugins
              li.nav-item
                a(href=`${CWD}docs/changelog.html`).dropdown-item.link-700 Changelog   

        ul.navbar-nav.ms-auto.align-items-lg-center
          li.nav-item
            a.nav-link(href=`${CWD}sitemap.html`) Sitemap
          li.nav-item
            a.nav-link(href=generator_link target='_blank') Generator
          li.nav-item
            a(href=purchase_link target='_blank').btn.btn-outline-light.rounded-pill.btn-sm.border-2.ms-lg-2 Purchase                             